<section>
  <div class="container mt-5">
    <div class="row  ">
      {{#each pools}}
      <div class="col-md-3 p-3">
      <div class="card " style="width: 16rem; height:22rem">
        <img src="/pool-images/{{this._id}}.jpg" class="card-img-top" alt="..." style="height:8rem">
        <div class="card-body">
          <h5 class="card-title fs-4 fw-bold ">{{this.name}}</h5>
          <p class="card-text fw-bold ">{{this.place}} , {{this.district}}</p>
          <p class="card-text "><a href="{{this.location}}" class="badge text-bg-primary text-wrap" style="text-decoration: none;"> Get location</a></p>
          <p class="card-text "><a href="/feedback-turf/{{this._id}}" class="badge text-bg-primary text-wrap" style="text-decoration: none;">View Feedback</a></p>
          <a href="/admin/view-pool-details/{{this._id}}" class="btn btn-secondary">view</a>
          <a href="/admin/delete-pool/{{this._id}}" class="btn btn-danger">Remove</a>
        </div>
      </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>
