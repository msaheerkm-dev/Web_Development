<section>
  <div class="container px-5 mt-4">
    <div class="container rounded p-4" style="background-color: rgb(159, 163, 160); width: 70%; margin-top: 130px;">
      <div class="row">
        <div class="col-md-6 mx-auto">
          <h2 class="text-center">Add Offer</h2>

          <form id="addOfferForm" action="/hallmanager/hall-offer" method="post" onsubmit="return validateForm()">

            <label class="form-label">Date</label>
            <input type="text" class="form-control" id="date" name="date" placeholder="Enter date">
            <div class="text-danger" id="dateError"></div>

            <label class="form-label">Auditorium Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter auditorium name">
            <div class="text-danger" id="nameError"></div>

            <label class="form-label">Discount</label>
            <input type="text" class="form-control" id="discount" name="discount" placeholder="Enter discount amount">
            <div class="text-danger" id="discountError"></div>

            <button type="submit" class="btn btn-success mt-4">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
function validateForm() {
    let isValid = true;

    let fields = ["date", "name", "discount"];

    fields.forEach(field => {
        let input = document.getElementById(field);
        let errorDiv = document.getElementById(field + "Error");

        if (!input.value.trim()) {
            errorDiv.innerText = field.charAt(0).toUpperCase() + field.slice(1) + " is required.";
            isValid = false;
        } else {
            errorDiv.innerText = "";
        }
    });

    return isValid; // Prevents form submission if any field is empty
}
</script>
