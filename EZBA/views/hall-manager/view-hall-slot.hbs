<section>
  {{#if hallBooking.length}}
<div class="container mt-5">
    
<table class="table table-striped">
  <thead >
    <tr>
        <th scope="col">Time</th>
      <th scope="col">Amount</th>
      <th scope="col">control</th>
    </tr>
  </thead>
  <tbody>
    {{#each hallBooking}}
    <tr>
      <td>{{this.time}}</td>
      <td>{{this.amount}}</td>
      <td>
        <a href="/hallmanager/edit-hall-booking/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/hallmanager/delete-booking/{{this._id}}" class="btn btn-danger">remove</a>
        </td>
    </tr>
{{/each}}
  </tbody>
</table>
</div>
{{else}}
    <p class="text-center mt-4 text-danger fs-1 "> Currently no Booking available.</p>
    {{/if}}
</section>