<section>
    <div class="container px-5 mt-3">
        <div class="container rounded p-4" style="background-color: rgb(159, 163, 160); width: 70%;">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <h2 class="text-center">Profile</h2>
                    <form id="profileForm" action="/hallmanager/hallmanager-profile" method="post" onsubmit="return validateForm()">

                        <label class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" value="{{user.name}}">
                        <div class="text-danger" id="nameError"></div>

                        <label class="form-label">Email</label>
                        <input type="text" class="form-control" id="email" name="email" value="{{user.Email}}">
                        <div class="text-danger" id="emailError"></div>

                        <label class="form-label">Phone no</label>
                        <input type="text" class="form-control" id="phone" name="phone" value="{{user.phone}}">
                        <div class="text-danger" id="phoneError"></div>

                        <label class="form-label">Place</label>
                        <input type="text" class="form-control" id="place" name="place" value="{{user.place}}">
                        <div class="text-danger" id="placeError"></div>

                        <label class="form-label">District</label>
                        <input type="text" class="form-control" id="district" name="district" value="{{user.district}}">
                        <div class="text-danger" id="districtError"></div>

                        <label class="form-label">Country</label>
                        <input type="text" class="form-control" id="country" name="country" value="{{user.country}}">
                        <div class="text-danger" id="countryError"></div>

                        <label class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="password">
                        <div class="text-danger" id="passwordError"></div>

                        <input type="checkbox" onclick="togglePassword()"> Show Password <br>

                        <button type="submit" class="btn btn-success mt-4">Submit</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
function togglePassword() {
    var x = document.getElementById("password");
    x.type = x.type === "password" ? "text" : "password";
}

function validateForm() {
    let isValid = true;
    let fields = ["name", "email", "phone", "place", "district", "country", "password"];

    fields.forEach(field => {
        let input = document.getElementById(field);
        let errorDiv = document.getElementById(field + "Error");

        if (!input.value.trim()) {
            errorDiv.innerText = field.charAt(0).toUpperCase() + field.slice(1) + " is required.";
            isValid = false;
        } else {
            errorDiv.innerText = "";
        }
    });

    return isValid;
}
</script>
