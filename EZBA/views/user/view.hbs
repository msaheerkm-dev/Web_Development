<section>
  <div class="container mt-5">
    <div class="row  ">
      {{#each products}}
      <div class="col-md-3 p-3">
      <div class="card " style="width: 16rem; height:20rem">
        <img src="/product-images/{{this._id}}.jpg" class="card-img-top" alt="..." style="height:11rem">
        <div class="card-body">
          <h5 class="card-title">{{this.Name}}</h5>
          <p class="card-text">{{this.description}}</p>
          <a href="#" class="btn btn-primary">{{this.category}}</a>
        </div>
      </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>